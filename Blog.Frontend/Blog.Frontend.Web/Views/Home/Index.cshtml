@{
    ViewBag.Title = "Bloggity Blog";
}

<snap-drawers>
    <div snap-drawer>
        <navigation-menu></navigation-menu>
    </div>
    <div snap-drawer="right">
        <h4>Right Drawer</h4>
    </div>
</snap-drawers>

<snap-content>
    <header-menu></header-menu>
    <div class="container" ng-controller="postsController">
        <posts-main posts="posts" size="size" get-error-type="getErrorType()" load-more-posts="loadMorePosts()"></posts-main>
    </div>
</snap-content>
